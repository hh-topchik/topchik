<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Action" table="action" schema="public" catalog="postgres">
        <id name="actionId">
            <column name="action_id" sql-type="bigint"/>
        </id>
        <property name="date">
            <column name="date" sql-type="date"/>
        </property>
        <property name="category">
            <column name="category" sql-type="integer"/>
        </property>
        <property name="counter">
            <column name="counter" sql-type="integer"/>
        </property>
        <many-to-one name="accountByDeveloperId" class="entity.Account">
            <column name="developer_id"/>
        </many-to-one>
        <many-to-one name="repositoryByRepoId" class="entity.Repository">
            <column name="repo_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>
